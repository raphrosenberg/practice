# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Web Servers
  config.vm.define "web01" do |web01|
    web01.vm.box = "ubuntu/bionic64"
    web01.vm.network "private_network", ip: "192.168.56.101"
    web01.vm.hostname = "web01"
  end

  config.vm.define "web02" do |web02|
    web02.vm.box = "ubuntu/bionic64"
    web02.vm.network "private_network", ip: "192.168.56.102"
    web02.vm.hostname = "web02"
  end

  config.vm.define "web03" do |web03|
    web03.vm.box = "ubuntu/bionic64"
    web03.vm.network "private_network", ip: "192.168.56.104"
    web03.vm.hostname = "web03"
  end

  # Database Server
  config.vm.define "db01" do |db01|
    db01.vm.box = "generic/centos9s"
    db01.vm.network "private_network", ip: "192.168.56.103"
    db01.vm.hostname = "db01"
    db01.vm.provision "shell", inline: <<-SHELL
      echo '[main]' > /etc/NetworkManager/conf.d/90-dns-none.conf
      echo 'dns=none' >> /etc/NetworkManager/conf.d/90-dns-none.conf
      echo '# Generated by Vagrant' > /etc/resolv.conf
      echo 'nameserver 192.168.1.1' >> /etc/resolv.conf
      echo 'options single-request-reopen' >> /etc/resolv.conf
      sudo systemctl reload NetworkManager
      sudo yum install -y mariadb-server wget unzip
      sudo systemctl enable mariadb
      sudo systemctl start mariadb
    SHELL
  end
end
